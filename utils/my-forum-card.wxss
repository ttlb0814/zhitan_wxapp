}

.quotation {
	width: 30rpx;
	height: 24rpx;
	position: absolute;
	left: -16rpx;
	top: 24rpx;
}

.post-module-question {
	position: relative;
	background-color: var(--white);
	border-radius: 8rpx 0px 0px 8rpx;
	padding: 40rpx 0 16rpx;
}

.post-out {
	padding: 0rpx 0 20rpx 24rpx;
}

.q_or_a {
	display: flex;
	align-items: flex-start;
	padding-right: 16rpx;
	justify-content: space-between;
}

.q_or_a .title {
	width: 296rpx;
	color: var(--grey-01);
	flex-shrink: 0;
	margin-bottom: 0;
}

.q_or_a .title-noanswer {
	color: var(--grey-01);
}

.q_or_a .answer {
	width: 318rpx;
	margin-left: 16rpx;
	position: relative;
	background: rgba(93, 78, 190, 0.2);
	border-radius: 16rpx;
	padding: 16rpx;
}

.answer p4 {
	font-size: var(--sec-01);
	/* padding-right: 32rpx; */
	display: -webkit-box;
	-webkit-box-orient: vertical;
	overflow: hidden;
	-webkit-line-clamp: 2;
	/*默认最少显示2行*/

}

.answerer {
	width: 32rpx;
	height: 32rpx;
	border-radius: 50%;
	box-shadow: var(--color-general) 0 0 2rpx;
	position: absolute;
	top: -16rpx;
	right: -16rpx;
}

.triangle {
	width: 16rpx;
	height: 16rpx;
	position: absolute;
	top: 24rpx;
	right: -16rpx;
}

/* 作者信息 */
.author-info {
	display: flex;
	align-items: center;
	margin-top: 24rpx;
}

.author-headerImg {
	width: 32rpx;
	height: 32rpx;
	border-radius: 50%;
}

.author-name {
	color: var(--sec-02);
	margin-left: 4rpx;
	margin-right: 20rpx;
}
.blue {
    color: #7B8FFF;
}

.green {
    color: #52C41A;
}

.add-time {
	color: var(--sec-02);
}

/* 帖子标签相关（学校，话题） */
.post-about {
	overflow: hidden;


}

.post-tags {
	display: flex;
	align-items: center;
	width: 100%;
	margin-top: 16rpx;
}

.post-type {
	padding: 4rpx 16rpx;
	border-radius: 32rpx;
	font-size: var(--h5-font-size);
	line-height: var(--h5-line-height);
	/* color: var(--approve); */
	/* background: rgba(82, 196, 26, 0.2); */
	margin-right: 16rpx;
}

.good-question {
	color: #C3B00E;
	background: #FFFB8F;
}

.label-school {
	margin-right: 16rpx;
	font-size: var(--h5-font-size);
}

.post-tag {
	flex: 1;
	margin-right: 16rpx;
	color: var(--color-general);
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.tag {
	margin-right: 16rpx;
	color: var(--color-general);
	display: inline;
}

hr {
	width: 100%;
	height: 2rpx;
}


.post-footer {
	display: flex;
	align-items: center;
	justify-content: space-between;
	height: 48rpx;
	padding: 0 0  0 24rpx;
}

.anawers {
	color: var(--sec-02);
}

.like {
	width: 48rpx;
	height: 48rpx;
}

