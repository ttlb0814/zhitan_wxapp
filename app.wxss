page,
tab-bar {
	/* 颜色  */
	--tint-play: #ffc8c1;
	--tint-theory: #e8eaf6;
	--tint-music: #d7f4b5;
	--tint-dance: #ffd2e1;
	--tint-art: #ffdea1;
	--tint-general: #e8d9ff;
	--tint-mc: #eceff1;
	--tint-producer:#f0f4c3;
	--tint-act:#e1bee7;
	--tint-pr:#b2dbdb;
	--tint-fashion:#fff59d;

	--color-play: #f7523f;
	--color-theory: #5c6bc0;
	--color-music: #43a047;
	--color-dance: #e91e63;
	--color-art: #ffa000;
	--color-general: #5d4ebe;
	--color-mc: #607d8b;
	--color-general-light:#9283f9;
	--color-producer:#9e9d24;
	--color-act:#ea80fc;
	--color-pr:#00bfa5;
	--color-fashion:#fdd835;

	--sec-01: #212121;
	--sec-02: #ababab;
	--sec-03: #c7c7cc;
	--sec-04: #e9e9e9;
	--sec-05: #f6f6f6;
	--white: #ffffff;
	--exp-light: background(rgba(93, 78, 190, 0.20));
	--exp-regular: background(rgba(93, 78, 190, 0.30));
	--exp-dark: background(rgba(93, 78, 190, 0.40));
	--exp-deep: #5e35b1;
	--theory-light: #bbdefb;
	--theory-deep: #1565c0;
	--gradient-author-bg: linear-gradient(180deg, #3A29A4 0%, #5D4EBE 100%);
	--gradient-play: linear-gradient(270deg, #ffa978 0%, #ff7043 100%);
	--gradient-theory: linear-gradient(270deg, #95a4e1 0%, #5c6bc0 100%);
	--gradient-music: linear-gradient(270deg, #78ce7d 0%, #43a047 100%);
	--gradient-dance: linear-gradient(270deg, #f6409c 0%, #e91e63 100%);
	--gradient-art: linear-gradient(270deg, #ffce00 0%, #ffa000 100%);
	--gradient-general: linear-gradient(270deg, #9686e0 0%, #5d4ebe 100%);
	--gradient-mc: linear-gradient(270deg, #99b4bf 0%, #607d8b 100%);
	--gradient-school-overlay: linear-gradient(180deg, #140239 0%, #5748BB 100%);
	--gradient-general-vertical:linear-gradient(180deg, #3A29A4 0%, #5D4EBE 100%);
	--gradient-producer: linear-gradient(270deg, #DEDD4C 0%, #BEBD24 100%);
	--gradient-pr: linear-gradient(270deg, #08E0D1 0%, #06C3A9 100%);
	--gradient-act: linear-gradient(270deg, #F6A8FF 0%, #EA80FC 100%);
	--gradient-fashion: linear-gradient(270deg, #FFED5E 2%, #FDD835 100%);

	--warning:#f5222d;
	--approve:#52c41a;
	--function:#6b8bff;

	/**********字号和行高**********/
  	--h1-font-size: 40rpx;
  	--h1-letter-spacing:0;
	--h1-line-height: 40rpx;
    --h2-font-size: 36rpx;
	--h2-line-height: 40rpx;
    --h3-font-size: 32rpx;
	--h3-line-height: 32rpx;
	--h4-font-size: 28rpx;
	--h4-line-height: 32rpx;
	--h5-font-size: 24rpx;
	--h5-line-height: 24rpx;
  	--h6-font-size: 22rpx;
	--h6-line-height: 24rpx;

  	--p2-font-size: 36rpx;
	--p2-line-height: 48rpx;
  	--p3-font-size: 32rpx;
	--p3-line-height: 48rpx;
	--p3-56-font-size:32rpx;
	--p3-56-line-height:56rpx;
  	--p4-font-size: 28rpx;
	--p4-line-height: 48rpx;
	--p5-font-size:24rpx;
	--p5-line-height:36rpx
}


/**********自定义的一些基础标签**********/
h1,h2,h3,h4,h5,h6,p1,p2,p3,p4,p5,p6{display: block;}

b ,.bold {font-weight: bold;}
view{word-break:break-word;}

h1,.h1 {font-size: var(--h1-font-size);line-height: var(--h1-line-height);letter-spacing:var(--h1-letter-spacing)}
h2,.h2 {font-size: var(--h2-font-size);line-height: var(--h2-line-height);letter-spacing:var(--h1-letter-spacing)}
h3,.h3 {font-size: var(--h3-font-size);line-height: var(--h3-line-height);letter-spacing:var(--h1-letter-spacing)}
h4,.h4 {font-size: var(--h4-font-size);line-height: var(--h4-line-height);letter-spacing:var(--h1-letter-spacing)}
h5,.h5 {font-size: var(--h5-font-size);line-height: var(--h5-line-height);letter-spacing:var(--h1-letter-spacing)}
h6,.h6 {font-size: var(--h6-font-size);line-height: var(--h6-line-height);letter-spacing:var(--h1-letter-spacing)}
p2,.p2{font-size: var(--p2-font-size); line-height: var(--p2-line-height);letter-spacing:var(--h1-letter-spacing)}
p3,.p3{font-size: var(--p3-font-size); line-height: var(--p3-line-height);letter-spacing:var(--h1-letter-spacing)}
p4,.p4{font-size: var(--p4-font-size); line-height: var(--p4-line-height);letter-spacing:var(--h1-letter-spacing)}
p3-56,.p3-56{font-size: var(--p3-56-font-size); line-height: var(--p3-56-line-height)}
p5,.p5{font-size: var(--p5-font-size); line-height: var(--p5-line-height)}

/**********阴影**********/
/* 8dp */
.shadow-01{background: #ffffff;box-shadow: 0 16rpx 20rpx 2rpx rgba(232, 234, 246, 0.14),0 6rpx 28rpx 4rpx rgba(232,234,246,0.12),
0 10rpx 10rpx -6rpx rgba(232,234,246,0.20)}
/* 16dp */
.shadow-02{background: #ffffff;box-shadow: 0 -4rpx 10rpx 0 rgba(187,187,187,0.16), 0 16rpx 24rpx 2rpx rgba(195,195,195,0.16),
0 6rpx 30rpx 5rpx rgba(167,167,167,0.14),0 8rpx 10rpx -5rpx rgba(159,159,160,0.22) }
.topbar-shadow{background: #ffffff;box-shadow:0 2rpx 4rpx 0 rgba(0, 0, 0, 0.04);}


/**********border样式**********/
.border-01{border-bottom: 1rpx solid var(--sec-03);}
.border-02{border-bottom: 2rpx solid var(--sec-04);}
.border-03{border-bottom: 2rpx solid #e8eaf6;}
.border-04{border-bottom: 1rpx solid var(--sec-04);}


/**********标签**********/
.label-main{display: flex;align-items: center;}
.label-main>view>.equal_top,.equal_down{width: 16rpx;height:4rpx;border-radius: 3rpx;}
.label-main>view>.equal_down{margin-top: 4rpx;border-radius: 3rpx;}
.label-main>h5,.label-main>h6{font-weight: bold;margin-left: 8rpx;}
label-school,.label-school{padding:4rpx 16rpx;color: var(--color-general); border: 1rpx solid var(--color-general);border-radius: 24rpx;display: inline-block;margin-right: 16rpx;box-sizing: border-box;}
label-author,.label-author{padding:4rpx 16rpx;border-radius: 16rpx;border: 1rpx solid var(--color-general);color: var(--color-general);}


/**********tag**********/
.tag{color: var(--tint-general);margin-right: 16rpx;font-weight: bold;}



/**********tab**********/
.tabSecond_item{display: inline-block;padding: 16rpx 24rpx;font-size: var(--h4-font-size);line-height: var(--h4-line-height);letter-spacing: var(--h1-letter-spacing);border-radius: 8rpx;background-color: var(--sec-04);}


/**********搜索框/评论框**********/
.search_box{padding: 16rpx 40rpx ;background: var(--sec-05);border-radius: 40rpx;color: var(--sec-01);font-size: var(--h4-font-size);line-height: var(--h4-line-height);letter-spacing: var(--h1-letter-spacing);}
.input-placeholder{color: var(--sec-02)!important;}
/* 评论框 */
.comment_box{padding: 16rpx 32rpx;background: var(--sec-05);border-radius: 40rpx;color: var(--sec-01);font-size: var(--p3-font-size);line-height: var(--p3-line-height);}


/**********卡片**********/
.card{padding:24rpx 32rpx 32rpx 32rpx;display: flex;justify-content: space-between;border-radius: 8rpx 0 0 8rpx; background: var(--white);}
.card>view{display: flex;flex-direction: column;width: 100%;justify-content: space-between;}
.card>view>p3{color: var(--sec-01);margin-bottom: 16rpx;font-weight: bold;margin-top: 35rpx;}
.card>view>view{display: flex; align-items: center;justify-content: space-between;width: 100%;}
.card>view>view>view{display: flex;flex-wrap: wrap;}
.card>view>view image{width: 32rpx;height: 32rpx;}
.card>view>view>view>h5:nth-child(2){margin: 0 24rpx;}
.card>view>view>view>h5{color: var(--sec-02);margin-bottom: 8rpx;}
.card>image{width: 176rpx;height: 176rpx;flex-shrink: 0;margin-left: 32rpx;}


.user_card{border-radius: 8rpx;background: var(--white);padding: 0 32rpx;display: flex;align-items: center;}
.user_card>image{width: 88rpx;height: 88rpx;border-radius: 50%;margin-right: 32rpx;flex-shrink: 0;border: 1rpx solid var(--sec-03);}
.user_card>view{display: flex;flex-direction: column;margin: 40rpx 0;}
.user_card>view>h3{margin-bottom: 16rpx;display: flex;align-items: center;}
.user_card>view>h3>image{width: 32rpx;height: 32rpx;flex-shrink: 0;}
.user_card>view>h3>image:first-child{margin: 0 16rpx;}
.user_card>view>view{overflow: hidden;white-space: nowrap;text-overflow: ellipsis;width: 565rpx;font-size: var(--h5-font-size);line-height: var(--h5-line-height);color: var(--sec-02);}
.user_card>view>view>text:nth-child(2){padding: 0 24rpx;border-left: 1rpx solid var(--sec-02)}
.user_card>view>view>text:first-child{padding-right: 24rpx;}
.user_card>view>view>text:last-child{padding-left: 24rpx;border-left: 1rpx solid var(--sec-02);}

/* 学校卡片 */
.sch_card{display: flex;margin: 0 32rpx 24rpx 32rpx;background: var(--white);padding: 24rpx 32rpx;border-radius: 8rpx;}
.sch_card>image{width: 112rpx;height: 112rpx;margin-right: 24rpx;flex-shrink: 0;border-radius: 8rpx;}
.sch_card .item{display: flex;justify-content: space-between;flex-direction: column;}
/* .sch_card .item>.uni_name p3{align-items: center;flex-wrap: wrap;} */
.sch_card .item>.uni_name h5{display: inline-block;	align-items:center;color: var(--sec-02);}
.sch_card .item>.uni_name h5>view{ width: 8rpx;height: 8rpx;background: var(--sec-02);border-radius: 50%;margin: 0 16rpx;
	vertical-align: 6rpx;display: inline-block;
}
.sch_card .item>.label>btn-xs{color: var(--color-general-light);border: 1rpx solid var(--color-general-light);margin-right: 18rpx;margin-bottom: 7rpx;}

/* 推荐列表卡片，搜索卡片 */
.article-card {padding-top: 64rpx;border-radius: 8rpx 0 0 8rpx;}
.article-card > .title {display: flex;justify-content: space-between;padding: 0 32rpx;}
.article-card > .title > image {width: 144rpx;height: 144rpx;flex-shrink: 0;margin-left: 30rpx;}
.article-card > .title > view h4 {color: var(--sec-02);padding-top: 16rpx;}
.article-card > .title > view > view > .bold {	margin-right: 24rpx;}
.article-card > .title > view h4 > datetime {margin-left: 24rpx;}
.article-card > .title > view > view {display: flex;flex-wrap: wrap;}
.article-card > .label {padding: 8rpx 32rpx 24rpx 32rpx;display: flex;align-items: center;flex-wrap: wrap;}
.article-card > .label > view {display: flex;}
.article-card > .label > view > label-school,.article-card > .label > view > h5 {margin-right: 24rpx;margin-top: 16rpx;}
.article-card > .label > view > h5 {color: var(--color-general);}
.article-card > .base {border-top: 1rpx solid var(--sec-04);height: 95rpx;padding: 0 32rpx;display: flex;justify-content: space-between;align-items: center;}
.article-card > .base > h4 {color: var(--sec-02);}
.article-card > .base > image {width: 48rpx;height: 48rpx;}




/* 文章列表 */
.article-list{padding:64rpx 40rpx 0 56rpx;position: relative;}
.article-list>.label-main{position: absolute;left: 16rpx;top: 24rpx;}
.article-list > .title {display: flex;justify-content: space-between;}
.article-list > .title > image {width: 144rpx;height: 144rpx;flex-shrink: 0;margin-left: 30rpx;}
.article-list > .title > view h4 {color: var(--sec-02);padding-top: 16rpx;}
.article-list > .title > view > view > .bold {	margin-right: 24rpx;}
.article-list > .title > view h4 > datetime {margin-left: 24rpx;}
.article-list > .title > view > view {display: flex;flex-wrap: wrap;}
.article-list > .label {padding-top: 8rpx;display: flex;align-items: center;flex-wrap: wrap;}
.article-list > .label > view {display: flex;}
.article-list > .label > view > label-school,.article-list > .label > view > h5 {margin-right: 24rpx;margin-top: 16rpx;}
.article-list > .label > view > h5 {color: var(--color-general);}
.article-list>.base{height: 82rpx;display: flex;align-items: center;justify-content: space-between;color: var(--sec-02);border-bottom: 1rpx solid var(--sec-04);}
.article-list>.base>image{width: 48rpx;height: 48rpx;}



/* 草稿列表，交流列表 */

.forum-list{margin:0 40rpx;border-bottom: 1rpx solid var(--sec-04);padding: 32rpx 0;}
.forum-list .content{width: 670rpx;color: var(--sec-02);}
.forum-list .content>h5{text-overflow: ellipsis;white-space:nowrap;overflow:hidden;}
.forum-list .title{display: flex;justify-content: space-between;align-items: center;flex-wrap: nowrap;margin-bottom: 16rpx;}
.forum-list .title >h6{color: var(--sec-03);margin-left: 32rpx;}
.forum-list .title >h3{flex: 1;color: var(--sec-01);text-overflow: ellipsis;white-space:nowrap;overflow:hidden;}



/**********按钮**********/
btn-top,.btn-top{border: 2rpx solid var(--color-general); border-radius: 24rpx;padding: 12rpx 24rpx;color: var(--white);display: inline-block; background: var(--color-general); font-size: var(--h5-font-size); line-height: var(--h5-line-height)}
btn-top_active,.btn-top_active{color: var(--color-general);background: var(--white);font-size: var(--h5-font-size); line-height: var(--h5-line-height)}
btn-xs, .btn-xs{width: auto; margin: 0; display: inline-block; padding: 8rpx 16rpx;  font-size: var(--h5-font-size); line-height: var(--h5-line-height);  border-radius: 24rpx; }
btn-sm, .btn-sm{width: auto; margin: 0; display: inline-block; padding: 16rpx 24rpx;  font-size: var(--h5-font-size); line-height: var(--h5-line-height);  border-radius: 28rpx; }
btn-sm>image, .btn-sm>image{width: 24rpx;height: 24rpx;margin-right: 8rpx;}
btn-md, .btn-md{width: auto; margin: 0; display: inline-block; padding: 24rpx 96rpx;  font-size: var(--h3-font-size); line-height: var(--h3-line-height);  border-radius: 40rpx; }
btn-lg, .btn-lg{ width: 552rpx;height: 80rpx; font-size: var(--h3-font-size); line-height: var(--h3-line-height);  border-radius: 40rpx; display: flex;justify-content: center;align-items: center;}


/* 红点 */
.red-hot {width: 16rpx;height: 16rpx;background:var(--warning);position: absolute;top: 48rpx;right:32rpx;border-radius: 50%;padding: 0!important}

.base btn-reg button,.post-footer btn-reg button{width: 48rpx !important;height: 48rpx!important;}
.base btn-reg image,.post-footer btn-reg image{width: 48rpx; height: 48rpx;}