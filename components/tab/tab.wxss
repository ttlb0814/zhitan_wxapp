.tab_stair {
	width: 100%;
	box-sizing: border-box;
	padding: 24rpx 0;
	background-color: var(--white);
	box-shadow: 0 2rpx 4rpx 0 rgba(0, 0, 0, 0.04);
	margin-bottom: 2rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	position: relative;

}

.tab_stair .tab_list {
	position: relative;
	display: flex;
	justify-content: center;
}


.tab_stair .tab_list:last-child{
	margin-right: 0rpx!important;
}

.tab_stair .tab_item h4 {
	position: relative;
	top: 0;
	color: var(--sec-02);
}
.tab_stair .tab_item .sel {
	color: var(--sec-01);
	z-index: 99;
	font-weight: bold;
}

.tab_stair .tab_item .sel_line {
	position: absolute;
	width: 100%;
	bottom: 0rpx;
	opacity: 0.8;
	height: 8rpx;
	background-color: var(--tint-general);
}
