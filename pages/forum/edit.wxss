@import '../../utils/iconfont.wxss';

page {
	display: flex;
	flex-direction: column;
	height: 100vh;
	padding: 0 40rpx 20rpx 40rpx;
	box-sizing: border-box;
	border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.title-box {
	display: flex;
	flex-direction: column;
	/* padding: 0rpx 0rpx 24rpx 24rpx; */
	padding-bottom: 24rpx;
	border-bottom: 1rpx solid var(--sec-04);
}

.title-tip {
	display: flex;
	flex-direction: column;
	padding: 16rpx 0rpx 16rpx 32rpx;
	background: rgba(33, 33, 33, 0.8);
	margin: 0 24rpx;
	border-radius: 8rpx;
	position: relative;
	color: #ffffff;
}

.close-tip {
	opacity: 0;
}

.close {
	position: absolute;
	top: 22rpx;
	right: 22rpx;
	width: 20rpx;
	height: 20rpx;
}

.title-tip p4 {
	display: flex;
	align-items: center;
}

.dot {
	width: 8rpx;
	height: 8rpx;
	background-color: #ffffff;
	border-radius: 50%;
	margin-right: 16rpx;
}

.ql-editor.ql-blank:before {
	font-style: normal;
	color:var(--sec-02)
}

.draft {
	margin: 10rpx 0;
}

.draft view:last-child {
	border-bottom: 5rpx solid rgb(172, 36, 54);
}

.issue {
	display: flex;
	justify-content: space-between;
	margin-bottom: 10rpx;
}



.enter_title {
	padding: 24rpx 0;
	font-size: var(--p2-font-size);
	line-height: var(--p2-line-height);
	/* border-bottom: 1rpx solid var(--sec-04); */
}

.ql-container {
	box-sizing: border-box;
	width: 100%;
	margin-top: 24rpx;
	flex: 1;
	font-size: var(--p3-font-size);
	line-height: var(--p3--line-height);
	overflow: auto;
}

.ql-active {
	color: #22c704;
}

.iconfont {
	display: inline-block;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-right: 16rpx;
	width: 30px;
	height: 30px;
	cursor: pointer;
	font-size: 20px;
}

.toolbar {
	background: white;
	z-index: 1;
	box-sizing: border-box;
	padding: 0 16px;
	height: 50px;
	width: 100%;
	position: fixed;
	left: 0;
	right: 100%;
	bottom: 0;
	display: flex;
	align-items: center;
	border: 1px solid #ececec;
	border-left: none;
	border-right: none;
}

.tally {
	padding: 40rpx 0;
	display: flex;
	justify-content: space-between;
	border-top: 1rpx solid var(--sec-04);
}

.tally>h3 {
	color: var(--sec-02);
	flex-shrink: 0;
}

.tally image {
	width: 32rpx;
	height: 32rpx;
}

.edit {
	display: flex;
	padding: 32rpx 0 60rpx 0;
	justify-content: space-between;
	border-top: 1rpx solid var(--sec-04);
}

.edit>view {
	display: flex;
	align-items: center;
}

.edit>view>view {
	width: 80rpx;
	height: 80rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.edit>view>view:nth-child(2) {
	margin: 0 32rpx;
}

.edit image {
	width: 48rpx;
	height: 48rpx;
	margin-bottom: 8rpx;
}

.edit h6 {
	color: var(--sec-02);
}

.edit .general {
	color: var(--color-general);
}

.edit .sec-02{
	color: var(--sec-02);
}

.edit>btn-md,
.edit>btn-lg {
	background: var(--color-general);
	color: var(--white);
}

.picker {
	display: flex;
	align-items: center;
	justify-content: flex-end;
}

picker {
	flex: 1;
}

.picker>h3 {
	margin-right: 8rpx;
}

.picker>.sec-02 {
	color: var(--sec-02);
}

.tags-name {
	text-overflow: ellipsis;
	word-break: break-all;
	white-space: nowrap;
	overflow: hidden;
}

.uni-list,
.tag-list {
	display: flex;
	align-items: center;
	color: var(--sec-01) !important;
}

.tag-list .tags-name {
	text-overflow: ellipsis;
	word-break: break-all;
	white-space: nowrap;
	overflow: hidden;
	flex: 1;
	max-width: 420rpx;
}

.tag-list text {
	margin-right: 24rpx;
}

.uni-list text {
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
	width: 200rpx;
	text-align: right;
}

.issue_btn btn-reg button.btn-reg-button-cls {
	height: 80rpx;
	font-size: var(--h3-font-size);
	line-height: var(--h3-line-height);
	border-radius: 40rpx;
	justify-content: center;
	align-items: center;
	background: var(--color-general);
	color: var(--white);
}
.issue_btn btn-reg button.btn-reg-button-cls text {
	width: 552rpx;
}