/* pages/forum/answer-info.wxss */

page {
	padding-bottom: 170rpx;
	flex-shrink: 0;
	box-sizing: border-box;
	background-color: #ffffff;
	min-height: 100vh;
	display: flex;
	flex-direction: column;
	border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.title {
	padding: 56rpx 30rpx 56rpx 40rpx;
	font-size: var(--p2-font-size);
	line-height: var(--p2-line-height);
	position: relative;
	border-bottom: 16rpx solid #f9f9f9;
}

.title text {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	overflow: hidden;
	-webkit-line-clamp: 2;
}

.title .quotation {
	width: 30rpx;
	height: 24rpx;
	position: absolute;
	left: 16rpx;
	top: 24rpx;
}

.vessel {
	position: relative;
	padding: 40rpx 40rpx 0rpx;
}

.answerer-info {
	margin-bottom: 40rpx;
	display: flex;
	align-items: stretch;
}

.head-img image{
	width: 88rpx;
	height: 88rpx;
	border-radius: 50%;
	border: 1rpx solid var(--sec-03);
	margin-right: 24rpx;
}

.name-info {
	/* height: 88rpx; */
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.name {
	display: flex;
	align-items: center;
	color: var(--sec-01);
	padding-top: 16rpx;
}

.vip-fill {
	width: 32rpx;
	height: 32rpx;
	margin-left: 16rpx;
}

.add-time {
	color: var(--sec-02);
}

.copyright {
	width: 100%;
	margin-top: 64rpx;
}

.copyright image {
	width: 40rpx;
	height: 40rpx;
	vertical-align: middle;
	margin: 0 8rpx 0 40rpx;
}

.copyright > h3 {
	color: var(--function);
	margin-top: 44rpx;
	display: flex;
	justify-content: flex-end;
	align-items: center;
	position: relative;
}

.copyright > h3 > button {
	width: 180rpx;
	padding: 0;
	position: absolute;
	top: 0;
	opacity: 0;
}

.copyright > h3 > view {
	display: flex;
	align-items: center;
}
/* 点赞一行 */

.answer-interact {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 24rpx 0;
	border-top: 1rpx var(--sec-04) solid;
	margin-top: 32rpx;
}

.approve-num {
	color: var(--sec-02);
}

.handle-box {
	display: flex;
	align-items: center;
}

.handle-box image {
	width: 48rpx;
	height: 48rpx;
}

.approve {
	margin-left: 56rpx;
}

.foreword {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 64rpx 40rpx 16rpx;
	background: #f9f9f9;
	color: var(--sec-02);
}

page > .comment-list {
	flex: 1;
	box-shadow: 0 0 0 200vh #f9f9f9 inset;
	height: 100%;
}

page > .comment-list .list {
	margin-bottom: 20rpx;
}

page > .comment-list .loading {
	text-align: center;
	height: 80px;
	line-height: 80px;
	color: gray;
}

page > .comment-list .end {
	text-align: center;
	height: 80px;
	line-height: 80px;
	color: lightgray;
}

/* 评论框 */
.com_frame {
	box-sizing: border-box;
	width: 100%;
	border: 1rpx solid var(--sec-03);
	background: var(--white);
	padding: 31rpx 48rpx 59rpx 24rpx;
	position: fixed;
	display: flex;
	align-items: center;
	left: 0;
	bottom: 0;
}

.com_frame textarea {
	width: 100%;
	padding: 20rpx 32rpx;
	box-sizing: border-box;
}
.com_frame > h3,
.com_frame .send {
	color: var(--function);
	position: absolute;
	right: 32rpx;
	bottom: 40rpx;
	padding-top: 50rpx;
}

.com_frame .send text {
	font-weight: bold;
	color: var(--function);
	font-size: var(--h3-font-size);
	line-height: var(--h3-line-height);
}
.com_frame > h3 {
	color: var(--function);
	position: absolute;
	right: 32rpx;
	bottom: 40rpx;
	padding-top: 50rpx;
}
.copyright btn-reg text {
	font-size: var(--h3-font-size);
	line-height: var(--h3-line-height);
	color: var(--function);
}

.com_frame > view {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.com_frame .skip {
	margin: 0 48rpx 4rpx 48rpx;
}

.com_frame > view image {
	width: 48rpx;
	height: 48rpx;
	margin-bottom: 4rpx;
}

.comment_box {
	flex: 1;
}

.poster {
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 99999999999999;
	background: rgba(0, 0, 0, 0.7);
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.bg {
	width: 622rpx;
	height: 912rpx;
}

.shareimg {
	position: absolute;
	top: 96rpx;
	left: 40rpx;
	width: 543rpx;
	height: 776rpx;
	border-radius: 16rpx;
}

.btn-md {
	z-index: 9999;
	margin-top: 56rpx;
	background: var(--color-general);
	color: var(--white);
}
