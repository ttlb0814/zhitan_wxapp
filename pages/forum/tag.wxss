page {
	display: flex;
	height: 100vh;
	flex-direction: column;
}

.edit {
	display: flex;
	justify-content: flex-end;
	padding: 32rpx 45rpx 60rpx 0;
	border-top: 1rpx solid var(--sec-04);
}
.edit > btn-md {
	background-color: var(--color-general);
	color: var(--white);
}
.edit .sel {
	background: var(--warning);
}

.hot-tags {
	padding: 32rpx 32rpx 40rpx;
}

.hot-tags h4 {
	color: var(--sec-02);
	margin-bottom: 24rpx;
}

.hot-tags-list {
	display: flex;
	flex-wrap: wrap;
}

.hot-tags-list > btn-sm {
	margin: 0 16rpx 0rpx 0;
}

.no-sel-tag {
	color: var(--color-general);
	background: rgba(232, 217, 255, 0.5);
	border: 1rpx solid rgba(232, 217, 255, 0.5);
}

.sel-tag {
	color: white !important;
	background-color: var(--color-general);
	border: 1rpx solid var(--color-general) !important;
}

.tags-list {
	margin: 0 32rpx 0;
	padding-top: 40rpx;
	border-top: 2rpx solid var(--sec-04);
	flex: 1;
}
.tags-list > view {
	display: flex;
	flex-wrap: wrap;
}

.tag {
	margin-right: 16rpx;
	margin-bottom: 24rpx;
	font-weight: normal;
	border: 1rpx solid var(--sec-01);
	color: var(--sec-01);
}
