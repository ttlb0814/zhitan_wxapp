@import '../../utils/iconfont.wxss';

page {
	display: flex;
	flex-direction: column;
	height: 100vh;
	padding-bottom: 20rpx;
	box-sizing: border-box;
}
page > .block {
	padding: 0 40rpx;
	flex: 1;
	display: flex;
	flex-direction: column;
}
.ql-editor.ql-blank:before {
	font-style: normal;
	color: var(--sec-02);
}

.draft {
	margin: 10rpx 0;
}

.draft view:last-child {
	border-bottom: 5rpx solid rgb(172, 36, 54);
}

.issue {
	display: flex;
	justify-content: space-between;
	margin-bottom: 10rpx;
	/* margin-top: 100rpx; */
}

.enter_title {
	padding: 24rpx 0;
	font-size: var(--p2-font-size);
	line-height: var(--p2-line-height);
	border-bottom: 1rpx solid var(--sec-04);
}

.ql-container {
	margin-top: 24rpx;
	box-sizing: border-box;
	width: 100%;
	flex: 1;
	font-size: var(--p3-font-size);
	line-height: var(--p3--line-height);
	overflow: auto;
}

.ql-active {
	color: #22c704;
}

.iconfont {
	display: inline-block;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-right: 16rpx;
	width: 30px;
	height: 30px;
	cursor: pointer;
	font-size: 20px;
}

.toolbar {
	background: white;
	z-index: 1;
	box-sizing: border-box;
	padding: 0 16px;
	height: 50px;
	width: 100%;
	position: fixed;
	left: 0;
	right: 100%;
	bottom: 0;
	display: flex;
	align-items: center;
	border: 1px solid #ececec;
	border-left: none;
	border-right: none;
}

.tally {
	padding: 40rpx 0;
	display: flex;
	justify-content: space-between;
	border-top: 1rpx solid var(--sec-04);
}

.tally > h3 {
	color: var(--sec-02);
}

.tally image {
	width: 32rpx;
	height: 32rpx;
}

.edit {
	display: flex;
	padding: 32rpx 0 60rpx 0;
	justify-content: space-between;
	border-top: 1rpx solid var(--sec-04);
	padding-right: 46rpx;
}

.edit > view {
	display: flex;
	align-items: center;
}

.edit > view > view {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-left: 56rpx;
}


.edit image {
	width: 48rpx;
	height: 48rpx;
	margin-bottom: 8rpx;
}

.edit h6 {
	color: var(--sec-02);
}

.edit .general {
	color: var(--color-general);
}

.edit > btn-md,
.edit > btn-lg {
	background: var(--color-general);
	color: var(--white);
}

.picker {
	display: flex;
	align-items: center;
	justify-content: flex-end;
}

picker {
	flex: 1;
}

.picker > h3 {
	margin-right: 8rpx;
}

.picker > .sec-02 {
	color: var(--sec-02);
}

.uni-list {
	display: flex;
	align-items: center;
	color: var(--sec-01) !important;
}
.uni-list text {
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
	width: 200rpx;
	text-align: right;
}

.issue_btn btn-reg button.btn-reg-button-cls {
	height: 80rpx;
	font-size: var(--h3-font-size);
	line-height: var(--h3-line-height);
	border-radius: 40rpx;
	justify-content: center;
	align-items: center;
	background: var(--color-general);
	color: var(--white);
}
.issue_btn btn-reg button.btn-reg-button-cls text {
	width: 455rpx;
}
